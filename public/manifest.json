    }
  ],
  "categories": ["business", "productivity"],
  "screenshots": [
    {
      "src": "/screenshot1.png",
      "sizes": "1280x720",
      "type": "image/png",
      "label": "Interface principal do ARKIVE"
    }
  ],
  "shortcuts": [
    {
      "name": "Upload Documento",
      "url": "/?action=upload",
      "description": "Adicionar novo documento"
    },
    {
      "name": "Buscar",
      "url": "/?tab=search",
      "description": "Busca FTS5 inteligente"
    },
    {
      "name": "Auditoria",
      "url": "/?tab=audit",
