{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ARKIVE - Guardou, Achou!",
  "version": "1.0.0",
  "identifier": "com.arkive.desktop",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "windows": [
      {
        "title": "ARKIVE - Guardou, Achou!",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "center": true,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; font-src 'self'; img-src 'self' data: blob:; connect-src 'self'; object-src 'none'; base-uri 'self'; form-action 'self';"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis"],
    "category": "Productivity",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "shortDescription": "Sistema de gerenciamento de documentos empresarial",
    "longDescription": "Sistema inteligente de gerenciamento de documentos com interface moderna e funcionalidades avan√ßadas",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      },
      "allowDowngrades": false,
      "wix": {
        "language": ["pt-BR", "en-US"]
      },
      "nsis": {
        "displayLanguageSelector": false,
        "languages": ["English"]
      }
    }
  },
  "plugins": {
    "shell": {
      "open": false,
      "scope": []
    },
    "fs": {
      "scope": ["$APPDATA/arkive/data/**"]
    },
    "dialog": {
      "open": true,
      "save": true
    },
    "notification": {
      "all": true
    }
  }
}
