{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ARKIVE - Guardou, Achou!",
  "version": "1.0.0",
  "identifier": "com.arkive.desktop",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "windows": [
      {
        "title": "ARKIVE - Guardou, Achou!",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "center": true,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis"],
    "category": "Productivity",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png", 
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "shortDescription": "Sistema de gerenciamento de documentos empresarial",
    "longDescription": "Sistema inteligente de gerenciamento de documentos com interface moderna e funcionalidades avan√ßadas",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      },
      "allowDowngrades": false,
      "wix": {
        "language": ["pt-BR", "en-US"],
        "template": "main.wxs"
      },
      "nsis": {
        "displayLanguageSelector": true,
        "languages": ["Portuguese", "English"],
        "template": "installer.nsi",
        "preRequisites": [
          {
            "name": "Microsoft Visual C++ 2022 Redistributable",
            "url": "https://aka.ms/vs/17/release/vc_redist.x64.exe"
          },
          {
            "name": "Microsoft Edge WebView2",
            "url": "https://go.microsoft.com/fwlink/p/?LinkId=2124703"
          }
        ]
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "fs": {
      "scope": ["$APPDATA/**", "$RESOURCE/**", "$APP/**", "$LOG/**", "$TEMP/**"]
    },
    "dialog": {
      "open": true,
      "save": true
    },
    "notification": {
      "all": true
    }
  }
}
