{
  "productName": "ARKIVE - Guardou, Achou!",
  "version": "1.0.0",
  "identifier": "com.arkive.app",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "frontendDist": "../src",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "windows": [
      {
        "title": "ARKIVE - Guardou, Achou!",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "center": true,
        "resizable": true,
        "fullscreen": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "Productivity",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "shortDescription": "Sistema de gerenciamento de documentos empresarial",
    "longDescription": "Sistema inteligente de gerenciamento de documentos"
  },
  "allowlist": {
    "all": false,
    "shell": {
      "all": false,
      "open": true
    },
    "fs": {
      "all": false,
      "readFile": true,
      "writeFile": true,
      "scope": ["$APPDATA", "$RESOURCE", "$APP", "$LOG", "$TEMP"]
    },
    "dialog": {
      "all": false,
      "open": true,
      "save": true
    },
    "notification": {
      "all": true
    }
  }
}